<Window
    x:Class="SteamEcho.App.Views.ScreenshotViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SteamEcho.App.Views"
    mc:Ignorable="d"
    Title="Screenshot Viewer"
    WindowStartupLocation="CenterScreen"
    Height="580" Width="980" MinHeight="400" MinWidth="600"
    Background="#1B1B1B"
    >
    <Grid>
        <!-- The main screenshot image -->
        <Image Source="{Binding CurrentScreenshot.FilePath}" Stretch="Uniform"/>

        <!-- Left Navigation Area -->
        <Grid HorizontalAlignment="Left" Width="100" Background="Transparent">
            <Button Click="PreviousButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" Padding="10" CornerRadius="5">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Grid}}" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image Source="/SteamEcho.App;component/Assets/Images/arrow_left_icon.png" Width="25"/>
            </Button>
        </Grid>

        <!-- Right Navigation Area -->
        <Grid HorizontalAlignment="Right" Width="100" Background="Transparent">
            <Button Click="NextButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" Padding="10" CornerRadius="5">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Grid}}" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image Source="/SteamEcho.App;component/Assets/Images/arrow_right_icon.png" Width="25"/>
            </Button>
        </Grid>
    </Grid>
</Window>