<Window 
    x:Class="SteamEcho.App.Views.MessageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:services="clr-namespace:SteamEcho.App.Services"
    Title="Error" Height="180" Width="400"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="Transparent"
    AllowsTransparency="True"
    WindowStartupLocation="CenterOwner"
>
    <Border Background="#2B2B2C" CornerRadius="4" BorderBrush="#B42A35" BorderThickness="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="16" FontWeight="Medium" Margin="10"/>
            <TextBlock x:Name="MessageText" Grid.Row="1" TextWrapping="Wrap" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="{Binding Path=[ConfirmButton], Source={x:Static services:LocalizationService.Instance}, Mode=OneWay}" Width="80" Margin="0,0,10,0" Click="ConfirmButton_Click" Background="#E63946" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>