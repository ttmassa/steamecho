<Window 
    x:Class="SteamEcho.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SteamEcho.App"
    mc:Ignorable="d"
    Title="SteamEcho" Height="450" Width="800"
    Background="#323234"
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Column -->
        <StackPanel Grid.Column="0" Background="#2B2B2C">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/SteamEcho.App;component/Assets/menu_icon.png" Width="25" Margin="10"/>
                <TextBlock Text="Jeux VidÃ©os" Foreground="#F0F0F0" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Command="{Binding AddGameCommand}" Background="Transparent" BorderThickness="0" Padding="0" Margin="10,0,0,0">
                    <Image Source="/SteamEcho.App;component/Assets/add_icon.png" Width="16"/>
                </Button>
            </StackPanel>
            <!-- Menu List -->
            <ListBox ItemsSource="{Binding Games}" Background="#2B2B2C" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding IconPath}" Width="32" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="#F0F0F0" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">

        </Grid>
    </Grid>
</Window>
