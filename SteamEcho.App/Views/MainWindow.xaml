<Window 
    x:Class="SteamEcho.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SteamEcho.App"
    xmlns:converters="clr-namespace:SteamEcho.App.Converters"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    Title="SteamEcho" Height="450" Width="800" Icon="/SteamEcho.App;component/Assets/Logo/steamecho_logo.ico" 
    WindowStartupLocation="CenterScreen"
    Background="#323234"
>
    <Window.Resources>
        <converters:AchievementRarityConverter x:Key="RarityConverter"/>
        <converters:BooleanToLoginTextConverter x:Key="BooleanToLoginTextConverter"/>
        <!-- Style for buttons -->
        <Style TargetType="Button" x:Key="NoHoverButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Column -->
        <Grid Grid.Column="0" Background="#2B2B2C">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Games" Foreground="#F0F0F0" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10"/>
                <!-- Add Game Button -->
                <Button Command="{Binding AddGameCommand}" Style="{StaticResource NoHoverButton}" Padding="0" ToolTip="Add Game" Margin="0,10,10,10">
                    <Image Source="/SteamEcho.App;component/Assets/Images/add_icon.png" Width="16"/>
                </Button>
                <!-- Settings Button -->
                <Button Padding="0" Margin="0,10,10,10" Command="{Binding ShowSettingsCommand}" Style="{StaticResource NoHoverButton}" ToolTip="Settings">
                    <Image Source="/SteamEcho.App;component/Assets/Images/settings_icon.png" Width="18"/>
                </Button>
            </StackPanel>
            <!-- Menu List -->
            <Grid Grid.Row="1">
                <ListBox ItemsSource="{Binding Games}" SelectedItem="{Binding SelectedGame, Mode=TwoWay}" Background="#2B2B2C" BorderThickness="0" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="Stretch"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <!-- Hover effect -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4A4A4D"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>

                                <!-- Selected effect -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4A4A4D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBox}}" ToolTip="{Binding Name}">
                                <!-- Context menu -->
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Delete" Command="{Binding PlacementTarget.Tag.DeleteGameCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}"  FontWeight="Light"/>
                                        <MenuItem Header="Browse Files" Command="{Binding PlacementTarget.Tag.BrowseFilesCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}" FontWeight="Light"/>
                                        <MenuItem Header="Set Executable" Command="{Binding PlacementTarget.Tag.SetExecutableCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}" FontWeight="Light"/>
                                    </ContextMenu>
                                </Grid.ContextMenu>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image Grid.Column="0" Source="{Binding IconUrl}" VerticalAlignment="Center" Width="28" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Foreground="#F0F0F0" FontSize="14" FontWeight="Medium" Margin="0,0,10,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                <TextBlock Grid.Column="2" Text="{Binding AchievementsSummary}" VerticalAlignment="Center" Foreground="#C4C4C6" FontSize="12" FontWeight="Regular"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Game Content (Visible when not in settings) -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSettingsVisible}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <!-- Content Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Content Area -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Content Header -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Game title -->
                    <TextBlock Grid.Column="0" Text="{Binding SelectedGame.Name}" Foreground="#F0F0F0" FontSize="20" FontWeight="SemiBold" Margin="10"/>

                    <!-- Setup Button -->
                    <Button Grid.Column="1" Command="{Binding ToggleProxyCommand}" CommandParameter="{Binding SelectedGame}" Foreground="#F0F0F0" Margin="0,10,20,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NoHoverButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder" CornerRadius="4" Background="{TemplateBinding Background}" Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <!-- Default state: Setup Required -->
                                <Setter Property="Background" Value="#4A4A4D"/>
                                <Setter Property="ToolTip" Value="Click to setup achievement tracking for this game"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Setup" FontSize="14" FontWeight="Medium" Margin="0,0,5,0"/>
                                            <Image Source="/SteamEcho.App;component/Assets/Images/setup_icon.png" Width="14"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <!-- When proxy is setup: Ready -->
                                    <DataTrigger Binding="{Binding SelectedGame.IsProxyReady}" Value="True">
                                        <Setter Property="ToolTip" Value="Click to remove achievement tracking setup"/>
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="Ready" FontSize="14" FontWeight="Medium" Margin="0,0,5,0"/>
                                                    <Image Source="/SteamEcho.App;component/Assets/Images/check_icon.png" Width="14"/>
                                                </StackPanel>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- When no game is selected -->
                                    <DataTrigger Binding="{Binding SelectedGame}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Play/Stop button -->
                    <Button Grid.Column="2" Command="{Binding TogglePlayStateCommand}" CommandParameter="{Binding SelectedGame}" Foreground="#F0F0F0" Margin="0,10,20,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NoHoverButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder" CornerRadius="4" Background="{TemplateBinding Background}" Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <!-- Default state: Start -->
                                <Setter Property="Background" Value="#E63946"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Play" FontSize="14" FontWeight="Medium" Margin="0,0,5,0"/>
                                            <Image Source="/SteamEcho.App;component/Assets/Images/play_icon.png" Width="10"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <!-- When game is running: Stop -->
                                    <DataTrigger Binding="{Binding SelectedGame.IsRunning}" Value="True">
                                        <Setter Property="Background" Value="#E63946"/>
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="Running..." FontSize="14" FontWeight="Medium" Margin="0,0,5,0"/>
                                                    <Image Source="/SteamEcho.App;component/Assets/Images/stop_icon.png" Width="12"/>
                                                </StackPanel>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <!-- When no game is selected -->
                                    <DataTrigger Binding="{Binding SelectedGame}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Content Area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <!-- Achievement Section -->
                        <ColumnDefinition Width="3*"/>
                        <!-- Other Sections -->
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Achievement Section -->
                    <Border Grid.Column="0" Background="#E63946" Margin="10" CornerRadius="12">
                        <!-- Sort the achievements -->
                        <Border.Resources>
                            <CollectionViewSource x:Key="SortedAchievements" Source="{Binding SelectedGame.Achievements}" IsLiveSortingRequested="True">
                                <CollectionViewSource.SortDescriptions>
                                    <componentModel:SortDescription PropertyName="IsUnlocked" Direction="Descending"/>
                                    <componentModel:SortDescription PropertyName="UnlockDate" Direction="Descending"/>
                                </CollectionViewSource.SortDescriptions>
                                <CollectionViewSource.LiveSortingProperties>
                                    <sys:String>IsUnlocked</sys:String>
                                    <sys:String>UnlockDate</sys:String>
                                </CollectionViewSource.LiveSortingProperties>
                            </CollectionViewSource>
                        </Border.Resources>

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <!-- Achievement Section Header -->
                                <RowDefinition Height="Auto"/>
                                <!-- Achievement List -->
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Achievement Section Header -->
                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <!-- Achievement Trophy Icon -->
                                <Image Source="/SteamEcho.App;component/Assets/Images/achievement_icon.png" Width="25" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Achievements" Foreground="#F0F0F0" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Achievement List -->
                            <ListBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource SortedAchievements}}" Background="#E63946" BorderThickness="0" Margin="0,10,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="ClipToBounds" Value="False"/>
                                        <Setter Property="Padding" Value="5,5,0,5"/>
                                        <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <!-- Context menu -->
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu>
                                                    <MenuItem Header="Unlock" Command="{Binding PlacementTarget.Tag.UnlockAchievementCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}">
                                                        <MenuItem.Style>
                                                            <Style TargetType="MenuItem">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUnlocked}" Value="False">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </MenuItem.Style>
                                                    </MenuItem>
                                                    <MenuItem Header="Lock" Command="{Binding PlacementTarget.Tag.LockAchievementCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}">
                                                        <MenuItem.Style>
                                                            <Style TargetType="MenuItem">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUnlocked}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </MenuItem.Style>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                        <!-- Template to remove default blue glow effect -->
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="Stretch"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.Resources>
                                    <!-- Style for the scroll bar -->
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Width" Value="4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid Background="Transparent">
                                                        <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                                                            </Track.DecreaseRepeatButton>
                                                            <Track.Thumb>
                                                                <Thumb Height="25" Cursor="Hand" VerticalAlignment="Top">
                                                                    <Thumb.Template>
                                                                        <ControlTemplate TargetType="Thumb">
                                                                            <Border Background="#F0F0F0" CornerRadius="5" Width="8"/>
                                                                        </ControlTemplate>
                                                                    </Thumb.Template>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                                                            </Track.IncreaseRepeatButton>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.Resources>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <!-- Achievement Icon -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- Achievement Details -->
                                                <ColumnDefinition Width="*"/>
                                                <!-- Achievement Global Percentage -->
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Container for Icon and Glow Effect -->
                                            <Grid Width="34" Height="34" Margin="0,0,10,0" ClipToBounds="False">
                                                <!-- Glow Effect Border -->
                                                <Border x:Name="GlowBorder" CornerRadius="5" />
                                                
                                                <!-- Achievement Icon -->
                                                <Image x:Name="AchievementIcon" Source="{Binding Icon}" VerticalAlignment="Center" Width="34" Cursor="Hand"/>
                                            </Grid>
                                            
                                            <!-- Achievement Details -->
                                            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Grid.Column="1">
                                                <TextBlock x:Name="AchievementName" Text="{Binding Name}" Foreground="#F0F0F0" FontSize="12" FontWeight="Medium" ToolTip="{Binding Name}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch"/>
                                                <TextBlock x:Name="AchievementDesc" Text="{Binding Description}" Foreground="#F0F0F0" FontSize="10" FontWeight="Regular" TextWrapping="NoWrap" ToolTip="{Binding Description}" TextTrimming="CharacterEllipsis" Margin="0,2,0,0" HorizontalAlignment="Stretch"/>
                                            </StackPanel>
                                            <!-- Achievement Global Percentage -->
                                            <TextBlock x:Name="AchievementGlobalPercentage" Text="{Binding GlobalPercentage, StringFormat='{}{0:F1}%'}" Foreground="#F0F0F0" FontSize="12" FontWeight="Regular" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Right" Margin="10,0,0,0"/>
                                        </Grid>
                                        <!-- Change color and icon based on achievement's completude -->
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsUnlocked}" Value="False">
                                                <Setter TargetName="AchievementIcon" Property="Source" Value="{Binding GrayIcon}"/>
                                                <Setter TargetName="AchievementName" Property="Foreground" Value="#4A4A4D"/>
                                                <Setter TargetName="AchievementDesc" Property="Foreground" Value="#4A4A4D"/>
                                                <Setter TargetName="AchievementGlobalPercentage" Property="Foreground" Value="#4A4A4D"/>
                                            </DataTrigger>

                                            <!-- Uncommon Achievement Glow -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsUnlocked}" Value="True" />
                                                    <Condition Binding="{Binding GlobalPercentage, Converter={StaticResource RarityConverter}}" Value="Uncommon" />
                                                </MultiDataTrigger.Conditions>
                                                <MultiDataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AchievementIcon" Storyboard.TargetProperty="Effect">
                                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                                    <DiscreteObjectKeyFrame.Value>
                                                                        <DropShadowEffect ShadowDepth="0" Color="#00FFFF" Opacity="1" BlurRadius="15" />
                                                                    </DiscreteObjectKeyFrame.Value>
                                                                </DiscreteObjectKeyFrame>
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.EnterActions>
                                            </MultiDataTrigger>

                                            <!-- Rare Achievement Glow -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsUnlocked}" Value="True" />
                                                    <Condition Binding="{Binding GlobalPercentage, Converter={StaticResource RarityConverter}}" Value="Rare" />
                                                </MultiDataTrigger.Conditions>
                                                <MultiDataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AchievementIcon" Storyboard.TargetProperty="Effect">
                                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                                    <DiscreteObjectKeyFrame.Value>
                                                                        <DropShadowEffect ShadowDepth="0" Color="#BF00FF" Opacity="1" BlurRadius="20" />
                                                                    </DiscreteObjectKeyFrame.Value>
                                                                </DiscreteObjectKeyFrame>
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.EnterActions>
                                            </MultiDataTrigger>

                                            <!-- Ultra Rare Glow -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsUnlocked}" Value="True" />
                                                    <Condition Binding="{Binding GlobalPercentage, Converter={StaticResource RarityConverter}}" Value="UltraRare" />
                                                </MultiDataTrigger.Conditions>
                                                <MultiDataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AchievementIcon" Storyboard.TargetProperty="Effect">
                                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                                    <DiscreteObjectKeyFrame.Value>
                                                                        <DropShadowEffect ShadowDepth="0" Color="#FFFF00" Opacity="1" BlurRadius="30" />
                                                                    </DiscreteObjectKeyFrame.Value>
                                                                </DiscreteObjectKeyFrame>
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.EnterActions>
                                            </MultiDataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Settings Content (Visible when in settings) -->
            <Grid x:Name="SettingsContentGrid">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSettingsVisible}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Settings Header -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Settings" Foreground="#F0F0F0" FontSize="20" FontWeight="SemiBold" Margin="10"/>
                    <Button Grid.Column="1" Command="{Binding HideSettingsCommand}" Style="{StaticResource NoHoverButton}" Margin="0,0,20,0">
                        <Image Source="/SteamEcho.App;component/Assets/Images/cross_icon.png" Width="14"/>
                    </Button>
                </Grid>

                <!-- Settings Area -->
                <Border Grid.Row="1" Background="#2B2B2C" Margin="10" CornerRadius="12">
                    <StackPanel Margin="15">
                        <!-- Steam Section -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                            <TextBlock Text="Steam" Foreground="#F0F0F0" FontSize="16" FontWeight="Medium" VerticalAlignment="Center"/>
                            <Button Command="{Binding RefreshDataCommand}" Style="{StaticResource NoHoverButton}" Margin="10,0,0,0" ToolTip="Refresh Steam data">
                                <Image Source="/SteamEcho.App;component/Assets/Images/refresh_icon.png" Width="16"/>
                            </Button>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Status: " Foreground="#F0F0F0" FontWeight="Regular" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding StatusText}" Foreground="#E63946" FontWeight="Medium" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#E63946"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUserLoggedIn}" Value="True">
                                                <Setter Property="Foreground" Value="#A1E8AF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Login/Logout -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding IsUserLoggedIn, Converter={StaticResource BooleanToLoginTextConverter}}" Foreground="#F0F0F0" FontWeight="Regular" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NoHoverButton}">
                                        <Setter Property="Command" Value="{Binding LogToSteamCommand}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUserLoggedIn}" Value="True">
                                                <Setter Property="Command" Value="{Binding LogOutFromSteamCommand}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Image Source="/SteamEcho.App;component/Assets/Images/steam_icon.png" Width="25"/>
                            </Button>
                        </StackPanel>

                        <!-- Notifications Section -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,2">
                            <TextBlock Text="Notifications" Foreground="#F0F0F0" FontSize="16" FontWeight="Medium" Margin="0,0,10,0"/>
                            <Button Command="{Binding TestNotificationCommand}" Style="{StaticResource NoHoverButton}" ToolTip="Test it!">
                                <Image Source="/SteamEcho.App;component/Assets/Images/launch_icon.png" Width="18" VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                        <TextBlock Text="Customize your achievements notifications and test it by clicking on the rocket!" Foreground="#C4C4C6" FontSize="10" FontWeight="Light" Margin="0,0,0,10"/>

                        <!-- Notifications Size -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Size: " Foreground="#F0F0F0" FontWeight="Regular" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Slider Width="150" Minimum="1" Maximum="10" Value="{Binding NotificationSize, Mode=TwoWay, FallbackValue=5}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding NotificationSize, StringFormat='{}{0:F0}', FallbackValue=5}" Foreground="#F0F0F0" FontWeight="Regular" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Notification Color -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Color: " Foreground="#F0F0F0" FontWeight="Regular" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <ListBox ItemsSource="{Binding NotificationColors}" SelectedItem="{Binding NotificationColor, Mode=TwoWay}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <!-- Make the list horrizontal -->
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>

                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="24" Height="24" CornerRadius="6" Margin="4" Cursor="Hand" Background="{Binding}" ToolTip="{Binding}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#FFFFFFFF"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>

                        <!-- Save button -->
                        <Button Foreground="#F0F0F0" HorizontalAlignment="Left" Command="{Binding SaveNotificationSettingsCommand}" Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource NoHoverButton}">
                                    <!-- Default -->
                                    <Setter Property="Background" Value="#6E6E70"/>
                                    <Setter Property="Content" Value="Saved"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10,5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <!-- Unsaved changes -->
                                        <DataTrigger Binding="{Binding IsNotificationSaved}" Value="True">
                                            <Setter Property="Background" Value="#E63946"/>
                                            <Setter Property="Content" Value="Save"/>
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C32A3A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Indicator -->
        <ProgressBar Grid.ColumnSpan="2" IsIndeterminate="True" VerticalAlignment="Top" Height="4" Foreground="#E63946" BorderThickness="0">
            <ProgressBar.Style>
                <Style TargetType="ProgressBar">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoadingGames}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ProgressBar.Style>
        </ProgressBar>
    </Grid>
</Window>
