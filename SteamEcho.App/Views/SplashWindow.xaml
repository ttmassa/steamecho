<Window
    x:Class="SteamEcho.App.Views.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SteamEcho" Width="800" Height="450"
    WindowStyle="None" 
    AllowsTransparency="True"
    Topmost="True" 
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    Background="Transparent"
>

    <Border CornerRadius="8" Background="#E63946">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="SteamEcho" FontSize="48" FontWeight="SemiBold" Foreground="#F0F0F0" Margin="0,0,0,20"/>
                <Image Source="/SteamEcho.App;component/Assets/Logo/steamecho_logo.png" Width="60" Height="60"/>
            </StackPanel>
            <TextBlock Grid.Row="1" x:Name="StatusText" Text="Initialisation..." FontSize="14" Foreground="#F0F0F0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,50"/>
        </Grid>
    </Border>
</Window>