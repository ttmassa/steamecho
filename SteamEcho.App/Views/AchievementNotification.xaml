<Window 
    x:Class="SteamEcho.App.Views.AchievementNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Achievement Unlocked"
    WindowStyle="None" AllowsTransparency="True" Background="Transparent"
    Topmost="True" ShowInTaskbar="False" SizeToContent="WidthAndHeight"
    Loaded="Window_Loaded"
>
    <Border Background="{Binding Tag, RelativeSource={RelativeSource AncestorType=Window}}" CornerRadius="5" Padding="10">
        <Border.LayoutTransform>
            <ScaleTransform x:Name="WindowScaleTransform" ScaleX="1" ScaleY="1" />
        </Border.LayoutTransform>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="{Binding Icon}" Width="48" Height="48" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Description}" FontWeight="Medium" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>